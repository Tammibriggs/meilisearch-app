<!DOCTYPE html>  
<html>  
<head>  
  <title>Meili</title>  
  <link rel="stylesheet" href="/styles.css">
</head>  
<body>  
  <div class="home">
    <div class="hero">
      <div class="hero__desc">
        <div>
          <h2>Explore Your Favorite Books on JavaScript</h2>
          <form class="hero__form" method="GET">
            <input 
              placeholder="Search javascript books" 
              name="search" 
              value="<%= searchValue %>"
              >
            <button>Search</button>
          </form>
        </div>
        <div>
          <img src='/img/no-back.png' alt="book"/>
        </div>
      </div>
      <div class="books">
        <h4>Books</h4>
        <div class="books__list">
          <% books.forEach((book) => { %>
          <div class="book">
            <img src=<%= book.thumbnail %> alt="book"/>
            <div>
              <h2><%= book.title %></h2>
              <p>by 
                <% book.authors.forEach((author) => { %>
                  <%= author + ', '%>
                <% })%>
              </p>
              <p><%= book.summary %></p>
            </div>
          </div> 
          <% })%>
        </div>
      </div>
    </div>
  </div>
</body>  
</html> 
